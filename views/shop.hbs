<div class="row">
  <section class="main col-md-9">
    {{#unless data.post}}
      <item>
        <div class="row">
          <div class="col-4">
            <h2>{{data.item.title}}</h2>
            <img src="{{data.item.featureImage}}" alt="Feature Image" style="width:100%">
          </div>
          <div class="col-8">
            <br /><br />
            <div class="row">
              <div class="col-12">
                {{{safeHTML data.item.body}}}
                <br />
                <strong>Price:</strong> ${{data.item.price}}<br />
                <strong>Category:</strong> {{data.item.category}}<br />
                <strong>Last Updated:</strong> {{data.item.postDate}}
              </div>
            </div>
          </div>
        </div>
      </item>
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Post / Category</p>
      </div>
    {{/unless}}
  </section>
  <!-- Aside for Items and Categories -->
  <aside class="col-md-3">
    <br /><br />
    {{#unless data.posts}}
    <h4>Items</h4>
    <ul class="list-group">
      {{#each data.items}}
        <a href="/shop/{{this.id}}?category={{../viewingCategory}}" class="list-group-item">{{this.title}}</a>
      {{/each}}
    </ul>
    {{else}}
      <h4>{{data.message}}</h4>
      <ul class="list-group">
        {{#each data.items}}
          <a href="/shop/{{this.id}}?category={{../viewingCategory}}" class="list-group-item">{{data.message}}</a>
        {{/each}}
      </ul>
    {{/unless}}
    {{#if data.categories}}
    <h4>Categories</h4>
    <ul class="list-group">
      {{#each data.categories}}
        <a href="/shop?category={{this.id}}" class="list-group-item">{{this.category}}</a>
      {{/each}}
    </ul>
    {{else}}
        <h4>{{data.categoriesMessage}}</h4>
        <ul class="list-group">
        <a href="/shop?category={{this.id}}" class="list-group-item">{{data.categoriesMessage}}</a>
    </ul>
    {{/if}}
  </aside>
</div>