<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<div class="container" style="padding-top: 90px;">
  <form method="post" action="/items/add" enctype="multipart/form-data">
    <div class="form-group">
      <label for="featureImage">Feature Image</label>
      <input type="file" class="form-control-file" id="featureImage" name="featureImage">
    </div>
    <div class="form-group">
      <label for="title">Item Name:</label>
      <input type="text" class="form-control" id="title" name="title">
    </div>
    <div class="form-group">
      <label for="price">Price:</label>
      <input type="text" class="form-control" id="price" name="price">
    </div>
    <div class="form-group">
      <label for="body">Description:</label>
      <textarea class="form-control" id="body" name="body" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="category">Category:</label>
      <select class="form-control" id="category" name="category">
        <option value="1">Home, Garden</option>
        <option value="2">Electronics, Computers, Video Games</option>
        <option value="3">Clothing</option>
        <option value="4">Sports & Outdoors</option>
        <option value="5">Pets</option>
      </select>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="published" name="published">
      <label class="form-check-label" for="published">
        Published
      </label>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Add Post</button>
  </form>
</div>

