<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!-- Latest compiled and minified Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/register.css" />

    <title>Vithursh Thananchayan's Store</title>

  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          {{#navLink ""}}WEB322 - Vithursh Thananchayan{{/navLink}}
          {{#navLink "/Shop"}}Store{{/navLink}}
          {{#navLink "/About"}}About{{/navLink}}
          {{!-- {{#navLink "/items"}}Items{{/navLink}}
          {{#navLink "/categories"}}Categories{{/navLink}} --}}
        </ul>

        {{#if session.user}}
          <form class="navbar-form navbar-right ms-auto">
              <div class="dropdown">
                  <button class="btn btn-primary dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                      <i class="bi bi-person"></i>  {{session.user.userName}}  <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="userMenu">
                      <li><a class="dropdown-item" href="/userHistory">User History</a></li>
                      <li><a class="dropdown-item" href="/logout">Log Out</a></li>
                  </ul>
              </div>
          </form>
          <ul class="nav navbar-nav navbar-right">
            {{#navLink "/items"}}Items{{/navLink}}
            {{#navLink "/categories"}}Categories{{/navLink}}
          </ul>
        {{else}}
          <ul class="nav navbar-nav navbar-right">
          </ul>

          <form class="navbar-form navbar-right ms-auto">
            {{!-- {{#navLink "/login"}}Log In{{/navLink}} --}}
            <a href="/register" class="btn btn-success"><span class="glyphicon glyphicon-cog"></span>  Register</a>
            <a href="/login" class="btn btn-primary"><span class="glyphicon glyphicon-chevron-right"></span>  Log In</a>
          </form>

        {{/if}}
      </div>
      <!-- /.container-fluid -->
    </nav>
    <div class="container" style="padding-top: 90px;">
      {{{body}}}
    </div>

    <!-- Latest compiled and minified Bootstrap 5 JavaScript -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>